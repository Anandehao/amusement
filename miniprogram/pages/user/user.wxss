/* pages/user/user.wxss */

/* 背景 */
.userAvatar{
  height: 240px;
  filter: blur(5px);
  position: absolute;
  z-index: -10;
  width: 100%;
  top: 0;
}
.userAvatar image{
  width: 100%;
  height: 100%;
}

/* 头像 */
.userAvatarUrl{
  border: 3px solid white;
  width: 110px;
  height: 110px;
  border-radius: 50%;
  margin: 0 auto;
  margin-top: 40px;
  overflow: hidden;
}
.userAvatarUrl image{
  width: 100%;
  height: 100%;
}

.topImg{
  position: relative;
  border: 2px white solid;
  height: 245px;
}
/* 用户名 */
.userNickName{
  margin-top: 20px;
  text-align: center;
  color: white;
  font-size: 20px;
}
/* 选项 */
.content{
  background-color: rgb(245, 245, 245);
  width: 741rpx;
  height: 350px;
  border: 1px solid transparent;
}
.contentItems{
  margin: 20px auto;
  border-top: 1px solid rgb(230, 230, 230) ;
  border-bottom: 1px solid rgb(230, 230, 230) ;
  height: 170px;
  width: 100%;
  background-color: white;
}
/* 单条 */
.Item{
  border-bottom: 1px solid rgb(210, 210, 210);
  height: 50px;
  width: 90%;
  margin: 3px auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.itemLeft{
  display: flex;
  align-items: center;
  width: 120px;
  justify-content: space-between;
}
.itemImg{
  height: 45px;
  width: 45px;
}
.itemImg image{
  width: 100%;
  height: 100%;
}
.itemIcon{
  height: 35px;
  width: 35px;
}
.itemIcon image{
  width: 100%;
  height: 100%;
}
.itemText{
  font-size: 20px;
  letter-spacing: 2px;
}
.myMusic{
  background-color: white;
  height: 60px;
  border-top: 1px solid rgb(210, 210, 210);
  border-bottom: 1px solid rgb(210, 210, 210);
}
#itemBottom{
  border-bottom: 1px solid transparent;
}
#itemLeft{
  width: 160px;
}