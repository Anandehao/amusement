.rmtj{
  margin-top: 15px;
  width: 90%;
  margin-left: 5%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.rmtj .rm_item{
  width: 25%;
  height: 150px;
  text-align: center;
  font-size: 11px;

}  
.rmtj .rm_item image{
  height: 90px;
  width: 80%;
  border-radius: 4px;
}
.rmtj .rm_item .rm_text{
  width: 75%;
  margin-left: 12%;
  font-weight: bolder;
  text-align: left;
  height: 30px;
  overflow: hidden;  /*溢出隐藏 */
}
.rmtj .rm_item .rm_te{
  font-size: 10px;
  width: 80%;
  color: gray;
  text-align: left;
  margin-left: 10%;
  letter-spacing: 1px;
}
