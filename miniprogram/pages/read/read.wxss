}
.mian{
  position: absolute;
  z-index: 10;
  background: white;
  border-radius: 20px;
  margin-left: 40rpx;
  width: 500rpx;
  }
  
  .cx1{
    border-bottom: 1rpx solid gainsboro;
    height: 60rpx;
    line-height: 60rpx;
    width: 480rpx;
    background: white;
    margin-left: 10rpx;
  }
  .cx1 input{
    font-size: 14px;
    color: black;
    line-height: 80rpx;
  }
  
  .cx input {
